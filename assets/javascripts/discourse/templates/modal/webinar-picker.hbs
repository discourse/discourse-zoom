{{#d-modal-body}}
  {{#if webinarId}}
    {{webinar-preview webinarId=webinarId webinar=webinar waiting=waiting updateDetails=(action "updateDetails")}}

    <div class="modal-footer">
      {{d-button action=(action "insert") class='btn-primary' label='zoom.webinar_picker.create' disabled=waiting}}
      {{d-button action=(action "clear") label='zoom.webinar_picker.clear' disabled=waiting}}
    </div>
  {{else}}
    <form class="form-horizontal webinar-picker">

      {{input type='text'
              value=webinarIdInput
              valueAttribute="value"
              class="webinar-builder-id"}}
        {{d-button action=(action "previewFromInput") icon="plus"}}
      <div class="webinar-picker-webinars">
        {{#each allWebinars as |webinar|}}
          {{webinar-option-row model=webinar onSelect=(action "selectWebinar" webinar.id)}}
        {{/each}}
      </div>
    </form>
  {{/if}}
{{/d-modal-body}}
