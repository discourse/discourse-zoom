{{#d-modal-body}}
  {{conditional-loading-spinner condition=loading}}
  {{#if selected}}
    {{#if webinar}}
      {{#if registrationRequired}}
        <div class="alert alert-error">{{i18n "zoom.no_registration_required"}}</div>
      {{/if}}

      <div class='webinar-title bold'>{{webinar.title}}</div>
      <div class='occurrance-start-time'>{{schedule}}</div>

      <div class='host'>{{i18n "zoom.hosted_by"}}</div>
      <div class='host-container'>
        <img class='avatar' src={{webinar.host.avatar_url}} width=80 height=80 title={{details.host.name}}/>
        <div class='host-description'>
          <div class='host-name'>{{webinar.host.name}}</div>
          <div class='group-name'>{{webinar.host.title}}</div>
        </div>
      </div>

      {{#if webinar.panelists}}
        <div class='panelists'>
          {{i18n 'zoom.panelists'}}
          <div class='panelist-avatars'>
            {{#each webinar.panelists as |panelist|}}
              <img class='avatar' src={{panelist.avatar_url}} width=25 height=25 alt={{panelist.name}} title={{panelist.name}} />
            {{/each}}
          </div>
        </div>
      {{/if}}
    {{/if}}
    <div class="modal-footer">
      {{#unless registrationRequired}}
        {{d-button action=(action "insert") class='btn-primary' label='zoom.webinar_picker.create'}}
      {{/unless}}
      {{d-button action=(action "clear") label='zoom.webinar_picker.clear' class='btn-flat'}}
    </div>
  {{else}}
    {{#unless loading}}
      {{#if error}}
        <div class="alert alert-error">{{i18n "zoom.error"}}</div>
      {{/if}}

      <div class="form-horizontal webinar-picker-input">
        {{input type='text'
                value=webinarIdInput
                valueAttribute="value"
                enter=(action "selectWebinar")
                class="webinar-builder-id"}}
          {{d-button action=(action "selectWebinar" webinarIdInput) icon="plus"}}
      </div>

      <div class="webinar-picker-webinars">
        {{#each allWebinars as |webinar|}}
          {{webinar-option-row model=webinar onSelect=(action "selectWebinar" webinar.id)}}
        {{/each}}
      </div>
    {{/unless}}
  {{/if}}
{{/d-modal-body}}
