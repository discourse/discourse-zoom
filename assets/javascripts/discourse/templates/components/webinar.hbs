{{#if webinar}}
  <div class="webinar-header">
    <div class="webinar-title-section">
      <div class='webinar-title bold'>
        {{webinar.title}}
        {{#if canEdit}}
          <a href {{action "editPanelists"}} class="edit-panelists" title="{{i18n "edit"}}">{{d-icon "pencil-alt"}}</a>
        {{/if}}
      </div>
      <div class='occurrance-start-time'>{{schedule}}</div>
    </div>

  {{#if showTimer}}
    <div class="countdown">
      <div class="pill">{{cDays}} <div>Days</div></div>
      <div class="pill">{{cHours}} <div>Hours</div></div>
      <div class="pill">{{cMins}} <div>Mins</div></div>
      <div class="pill">{{cSecs}} <div>Secs</div></div>
    </div>
  {{/if}}
  </div>

  {{#if webinar.host}}
    <div class='host'>Hosted by</div>
    <div class='host-container'>
      {{avatar webinar.host imageSize="large"}}
      <div class='host-description'>
        <div class='host-name'>{{hostDisplayName}}</div>
        <div class='group-name'>{{webinar.host.title}}</div>
      </div>
    </div>
  {{/if}}

  {{#if webinar.panelists}}
    <div class='panelists'>
      {{i18n 'zoom.panelists'}}
      <div class='panelist-avatars'>
        {{#each webinar.panelists as |panelist|}}
          {{avatar panelist imageSize="small"}}
        {{/each}}
      </div>
    </div>
  {{/if}}

  {{webinar-register webinar=webinar}}
{{else}}
  {{conditional-loading-spinner condition=loading}}
{{/if}}
